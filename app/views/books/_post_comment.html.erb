<% @book.post_comments.each do |post_comment| %>
				<table>
        <tr>
				    <td>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "img/no-image.png", size: "50x50" %>
						</td>
						<td><%= post_comment.comment %></td>
						<td>
						<% if post_comment.user == current_user %>
            <div>
              <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
            </div>
          <% end %>
						</td>
				<% end %>
				</tr>
				</table>